<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.minimart.o_pharmacy"
    android:background="@drawable/nback2"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:translationY="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="0dp"
            android:elevation="0dp"
            android:orientation="horizontal"
            app:fabCustomSize="70dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:rotationY="0"
                android:translationX="4dp"
                app:srcCompat="@drawable/o_neutrogina" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_weight="1.5"
                    android:text="TextView"
                    android:translationX="5dp"
                    android:translationY="10dp" />

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_weight="1.5"
                    android:text="TextView"
                    android:translationX="5dp"
                    android:translationY="15dp" />
                <EditText

                    android:layout_width="150dp"
                    android:layout_height="10dp"
                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="HOW MANY"
                    android:inputType="number"
                    android:translationX="5dp"
                    android:translationY="2dp" />

                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_weight="2"
                    android:text="add to cart"
                    android:translationX="20dp"
                    android:translationY="1dp" />
            </LinearLayout>
        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="0dp"
            android:elevation="0dp"
            android:orientation="horizontal"
            app:fabCustomSize="70dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:rotationY="0"
                android:translationX="4dp"
                app:srcCompat="@drawable/o_himalaya" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_weight="1.5"
                    android:text="TextView"
                    android:translationX="5dp"
                    android:translationY="10dp" />

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_weight="1.5"
                    android:text="TextView"
                    android:translationX="5dp"
                    android:translationY="15dp" />

                <EditText

                    android:layout_width="150dp"
                    android:layout_height="10dp"
                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="HOW MANY"
                    android:inputType="number"
                    android:translationX="5dp"
                    android:translationY="2dp" />

                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_weight="2"
                    android:text="add to cart"
                    android:translationX="20dp"
                    android:translationY="1dp" />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="0dp"
            android:elevation="0dp"
            android:orientation="horizontal"
            app:fabCustomSize="70dp">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:rotationY="0"
                android:translationX="4dp"
                app:srcCompat="@drawable/o_enchanteur" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_weight="1.5"
                    android:text="TextView"
                    android:translationX="5dp"
                    android:translationY="10dp" />

                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_weight="1.5"
                    android:text="TextView"
                    android:translationX="5dp"
                    android:translationY="15dp" />

                <EditText

                    android:layout_width="150dp"
                    android:layout_height="10dp"
                    android:layout_weight="2"
                    android:ems="10"
                    android:hint="HOW MANY"
                    android:inputType="number"
                    android:translationX="5dp"
                    android:translationY="2dp" />

                <Button

                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:layout_weight="2"
                    android:text="add to cart"
                    android:translationX="20dp"
                    android:translationY="1dp" />
            </LinearLayout>
        </LinearLayout>





    </LinearLayout>
</androidx.core.widget.NestedScrollView>